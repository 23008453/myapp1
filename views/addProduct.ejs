<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Sell Tickets</title>
    </head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Make a listing</h2></div>
        <br>
        <div class="text-center">
            <form action="/addProduct" method="POST">
                <label for="name">Artist Name:</label><br>
                <input type="text" id="name" name="name" required><br><br>

                <label for="quantity">Quantity:</label><br>
                <input type="number" id="quantity" name="quantity" min="0" step="1"required><br><br>

                <label for="price">Price:</label><br>
                <input type="number" id="price" name="price" min="0" step="0.01" required><br><br>

                <label for="date">Date and Time:</label><br>
                <input type="datetime-local" id="date" name="date" required><br><br>

                <label for="description">Description:</label><br>
                <input type="text" id="description" name="description"><br><br>
                
                <button type="submit">Add listing</button>
            </form>
        </div>
    </div>
</body>
</html>
