<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Tickets Details</h2></div>
        <br>
        <% if (product) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Artist Name:</b><br> <%= product.productName %></p>
                <p><b>Quantity:</b><br> <%= product.quantity %></p>
                <p><b>Price:</b><br> $<%= product.price %></p>
                <p><b>Date and Time:</b><br> <%= product.date %></p> 
                <p><b>Description:</b><br> <%= product.description %></p> 
            </div>
        <% } else { %>
            <p>No ticket found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
